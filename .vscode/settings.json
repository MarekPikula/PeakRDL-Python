{
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestyleArgs": [
        "--ignore=E203,E402,E501,W503"
    ],
    "python.linting.pydocstyleArgs": ["--convention=pep257"],
    "autoDocstring.docstringFormat": "pep257",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3",
    "python.envFile": "${workspaceFolder}/.env",
    "python.testing.pytestArgs": [
        "test/",
        "--cov=peakrdl_python",
        "--cov-report=term",
        "--cov-report=xml:output/coverage/cov.xml",
        "--cov-report=html:output/coverage/html",
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "coverage-gutters.coverageReportFileName": "output/coverage/cov.xml"
}
